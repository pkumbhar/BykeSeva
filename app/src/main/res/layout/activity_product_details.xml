<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar_acc"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#191919"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="left|center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accessories"
                    android:textSize="18dp"
                    android:id="@+id/tv_actitle_dtls_id"
                    android:textColor="#FFA829"
                    android:textStyle="bold|italic"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center|right">

                    <LinearLayout
                        android:layout_width="55sp"
                        android:layout_height="35sp"
                        android:orientation="horizontal"
                        android:layout_marginRight="8sp"
                        android:background="@drawable/btn_whitegraystyle"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:id="@+id/tv_cart_dtls__id"
                            android:layout_marginRight="2sp"
                            android:layout_marginLeft="8sp"
                            android:textColor="#ffffff"
                            android:layout_gravity="center|right"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="25sp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/cart_"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180sp"
                android:adjustViewBounds="true"
                android:visibility="visible"
                android:id="@+id/act_acc_imgVIewId"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="90sp"
                android:background="#fdbe02">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90sp"
                    android:orientation="horizontal"
                    android:id="@+id/lin_acc_LinerlayoutId"
                    android:background="#fdbe02">
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRODUCT TITLE"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"
                    android:textColor="#029edf"
                    android:id="@+id/tv_acc_productTitle" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RS."
                    android:textSize="15sp"
                    android:textColor="#fe2429"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111"
                    android:id="@+id/tv_acc_main_priceID"
                    android:textSize="20sp"
                    android:textColor="#fe2429"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/-"

                    android:textSize="15sp"
                    android:textColor="#fe2429"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:background="@drawable/linofferstyle"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32sp"
                        android:text="100"
                        android:layout_marginLeft="12sp"
                        android:gravity="center"
                        android:id="@+id/tv_acc_offermrp_id"
                        android:textColor="#b36161"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32sp"
                        android:text="Rs.100/-(20%off)"
                        android:layout_marginLeft="12sp"
                        android:paddingRight="8sp"
                        android:gravity="center"
                        android:id="@+id/tv_acc_offer_id"
                        android:textColor="#b36161"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:background="#fdbe02"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnadd_substract"
                    android:id="@+id/btn_acc_substractID"
                    android:text="-"/>
                <Button
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_acc_addationID"
                   android:layout_marginLeft="10sp"
                    android:background="@drawable/btnadd_substract"
                    android:text="+"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="2"
                    android:id="@+id/tv_acc_qty_id"
                    android:textStyle="bold"
                    android:textColor="#ef2d12"
                    android:textSize="25sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2sp"
                    android:text="Qty"
                    android:gravity="bottom"
                    android:textColor="#b60000"
                    android:textSize="12sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#e91010"
                            android:layout_marginLeft="12sp"
                            android:textSize="25sp"
                            android:text="Rs."/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#e91010"
                            android:layout_marginLeft="1sp"
                            android:textSize="25sp"
                            android:id="@+id/tv_acc_total_payable_id"
                            android:text="124/-"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#e91010"
                        android:text="Total Payable Amount"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:orientation="horizontal"
                android:background="#fdbe04"
                android:gravity="center"
                android:layout_marginBottom="8sp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add To Cart"
                    android:textColor="#b8b8b8"
                    android:background="@drawable/btncartbye"
                    android:id="@+id/btn_acc_add_to_cart_id"
                    android:textSize="10sp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy  Now"
                    android:textColor="#b8b8b8"
                    android:background="@drawable/btncartbye"
                    android:layout_marginLeft="6sp"
                    android:id="@+id/btn_acc_buy_now_cart_id"
                    android:textSize="10sp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCRIPTIoN"
                android:id="@+id/tv_acc_description"
                android:gravity="center"
                android:textColor="#1a1717"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33sp"
                android:text="General Information"
                android:textSize="18sp"
                android:paddingLeft="10sp"
                android:background="#817f7f"
                android:gravity="center|left"
                android:textColor="#ffffff"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e4e4e4"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:textColor="#ee703131"
                    android:text="TYPE"
                    android:paddingLeft="10sp"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:id="@+id/tv_acc_type"
                    android:textColor="#ee703131"
                    android:text="one"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:gravity="center|left"
                android:background="#eeeeee"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:textColor="#ee703131"
                    android:text="PRODUCT  TYPE"
                    android:paddingLeft="10sp"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:id="@+id/tv_acc_product_typeId"
                    android:textColor="#ee703131"
                    android:text="one"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e4e4e4"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:textColor="#ee703131"
                    android:text="BRAND"
                    android:paddingLeft="10sp"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:id="@+id/tv_acc_brand_id"
                    android:textColor="#ee703131"
                    android:text="one"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginBottom="8sp">
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:textColor="#ee703131"
                    android:text="WEIGHT"
                    android:paddingLeft="10sp"/>
                <TextView
                    android:layout_width="0sp"
                    android:layout_height="30sp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"
                    android:textColor="#ee703131"
                    android:id="@+id/tv_acc_weight"
                    android:text="one"
                    />
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>