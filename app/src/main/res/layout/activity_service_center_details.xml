<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF181616"
    android:orientation="vertical"
    tools:context="com.vecta.nuclearwheels.ServiceCenterDetails">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FF181616"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:src="@drawable/ntwo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services Center Details"
                    android:textSize="18dp"
                    android:textColor="#FFA829"
                    android:textStyle="bold|italic"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3d3c3c"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="#181616"
           >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:id="@+id/img_revert_id"
                android:src="@android:drawable/ic_menu_revert"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shirole service center"
                android:gravity="center"
                android:textSize="25dp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="#dc9300"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:id="@+id/tv_serD_SCName_id"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="text address line"
                    android:textColor="#eee"
                    android:id="@+id/tv_serD_SCaddresslineID"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="open time :7:00AM"
                        android:textColor="#dc9300"
                        android:id="@+id/tv_serD_SCopentimeID"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:background="#FFDC9300"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp">

                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="close  time:10:00PM "
                        android:textColor="#dc9300"
                        android:id="@+id/tv_serD_SCclosetimeID"/>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="service and facilites"
                    android:textColor="#fffcf5"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Call Now"
                        android:layout_weight="0.5"
                        android:layout_marginTop="15dp"
                        android:id="@+id/btn_serD_SCcalld"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:layout_weight="0.5"
                        android:layout_marginTop="15dp"
                        android:id="@+id/btn_serD_SCbookid"/>
                </LinearLayout>

</LinearLayout>

            </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="0.6">
        <fragment android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/map_servicecenterDetails_id"
            tools:layout="@layout/abc_screen_simple" />
    </LinearLayout>
</LinearLayout>
