<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".InsurancePolicy"
    android:gravity="center"
   >
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffd36f"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8sp"
                    android:paddingBottom="8sp"
                    android:src="@drawable/ntwo"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/insurance_policy_details"
                    android:textColor="#282828"
                    android:textStyle="bold|italic"/>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="8sp">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_InsurenceYourNameID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Name"
                        android:textColorHint="#f0b3b3b3"
                        android:layout_marginLeft="8sp"
                        android:layout_marginRight="8sp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ed_usreg_Insurencefname_id"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:inputType="text"
                            android:gravity="center"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_eYourNameID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last Name"
                        android:textColorHint="#f0b3b3b3"
                        android:layout_marginLeft="8sp"
                        android:layout_marginRight="8sp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/ed_insurance_Lname_id"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:inputType="text"
                            android:gravity="center"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_usreg_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contact No.*"
                        android:textColorHint="#f0b3b3b3"
                        android:layout_marginLeft="8sp"
                        android:layout_marginRight="8sp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:id="@+id/ed_insurance_contactl_id"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:inputType="number"
                            android:gravity="center"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input__usreg_contact_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email.*"
                        android:textColorHint="#f0b3b3b3"
                        android:layout_marginLeft="8sp"
                        android:layout_marginRight="8sp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:id="@+id/ed_insuranceEmail_contact_id"
                            android:textSize="18sp"
                            android:inputType="textEmailAddress"
                            android:textColor="#000000"
                            android:gravity="center"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_usreg_psw_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address.*"
                        android:textColorHint="#f0b3b3b3"
                        android:layout_marginLeft="8sp"
                        android:layout_marginRight="8sp">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:id="@+id/ed_insuranceAddress__id"
                            android:textSize="18sp"
                            android:inputType="text"
                            android:textColor="#000000"
                            android:gravity="center"/>
                    </android.support.design.widget.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50sp"
                            android:text="Policy Details"
                            android:gravity="center|left"
                            android:paddingLeft="8sp"
                            android:textColor="#FF959595"
                            android:background="#e2e2e2"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:layout_marginRight="5sp"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/linInsureance_SpinnerId"
                                android:orientation="vertical"
                                android:layout_marginTop="8sp">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40sp"
                                    android:background="@drawable/myrectangle_to_filter"
                                    android:orientation="horizontal"
                                    android:id="@+id/relBrandNameID">
                                    <Spinner
                                        android:id="@+id/sp_lin_InsuranceBrandID"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:layout_marginLeft="5sp"
                                        android:spinnerMode="dialog" />


                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40sp"
                                    android:background="@drawable/myrectangle_to_filter"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10sp">
                                    <Spinner
                                        android:id="@+id/sp_lin_InsuranceModelID"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:layout_marginLeft="5sp"
                                        android:spinnerMode="dialog" />


                                </RelativeLayout>
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="5sp"
                            android:layout_marginTop="10sp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Policy Type"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:textColor="#000000"/>
                            <RadioGroup
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content"
                                android:id="@+id/radio_insurance_policyType"
                                android:gravity="center">
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="New Policy"
                                    android:checked="true"
                                    android:id="@+id/rbtn_new_polocyID"
                                    style="@style/radionbutton"
                                    android:textSize="10sp"
                                    android:paddingLeft="4sp"
                                    android:textColor="#000000"/>
                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/radionbutton"
                                    android:text="Re-New  Policy"
                                    android:id="@+id/rbtn_renewpolocy_id"
                                    android:paddingLeft="4sp"
                                    android:layout_marginLeft="10sp"
                                    android:textSize="10sp"
                                    android:textColor="#000000"/>
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>



                    <Button
                        android:layout_width="170sp"
                        android:layout_height="40sp"
                        android:layout_marginTop="10sp"
                        android:text="Submit"
                        android:background="#FFFBD26E"
                        android:id="@+id/btn_insurancesubmit_id"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="35sp">
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
