<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linMainId"
    android:background="#fdb902">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_margin="3sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:weightSum="1">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:layout_marginLeft="4sp"
                android:background="#ffffff">

                <ImageView
                    android:id="@+id/inside_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="100sp"
                   android:adjustViewBounds="true"
                    android:src="@drawable/_au_di" />

                <LinearLayout
                    android:id="@+id/outside_imageview"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:orientation="vertical"
                    android:layout_alignTop="@id/inside_imageview"
                    android:layout_alignLeft="@id/inside_imageview"
                    android:background="@drawable/cloud"
                    android:scaleType="fitXY" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="offer"
                        android:textSize="9sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="#ffffff"/>
                    </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:background="#fdfdfd"
                android:orientation="vertical"
                android:layout_weight="0.7"
                android:layout_marginBottom="2sp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_gravity="right"
                    android:layout_marginTop="4sp"
                    android:layout_marginRight="6sp"
                    android:id="@+id/im_hart_id"
                    android:adjustViewBounds="true"
                    android:src="@drawable/gray_hart"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRODUCT TITLE"
                    android:gravity="center|left"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:id="@+id/tv_acProductTitleId"
                    android:layout_marginLeft="4sp"
                    android:textColor="#030303"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PRICE 320"
                    android:gravity="center|left"
                    android:layout_marginLeft="4sp"
                    android:id="@+id/tv_ac_price"
                    android:textColor="#ff0000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">
                    <Button
                        android:layout_width="0sp"
                        android:layout_height="30sp"
                        android:layout_weight="0.5"
                        android:textSize="10sp"
                        android:background="#ff464b"
                        android:layout_marginLeft="5sp"
                        android:id="@+id/btn_details_id"
                        android:layout_marginRight="5sp"
                        android:text="VIEW DETAILS"/>
                    <Button
                        android:layout_width="0sp"
                        android:layout_height="30sp"
                        android:layout_weight="0.5"
                        android:layout_marginRight="5sp"
                        android:layout_marginLeft="5sp"
                        android:text="Add To Cart"
                        android:id="@+id/btn_addTocartId"
                        android:background="#ff464b"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>