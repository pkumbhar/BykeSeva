<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="bookstyle">
        <item name="android:background">@drawable/bookbox_selector</item>
    </style>

    <style name="btnschedule">
        <item name="android:background">@drawable/btnschedule_selector</item>
    </style>

    <style name="mainbackground">
        <item name="android:background">@drawable/backthem_selector</item>
    </style>

    <style name="animationstyle">
        <item name="android:background">@drawable/slider_selector</item>
    </style>

    <style name="editTextStyle">
        <item name="android:background">@drawable/edittext_selector</item>
        <item name="android:textColor">#ee000000</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#2554ef</item>
        <item name="android:backgroundStacked">#1474e9</item>
        <item name="android:backgroundSplit">#1b46f2</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="radionbutton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/redio_selecter</item>
    </style>

    <style name="TextAppearance">
        <item name="colorControlNormal">#10ca35</item>
        <item name="colorControlActivated">#e6ab09</item>
        <item name="colorControlHighlight">#e100ff</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@style/TextAppearance">
        <item name="android:textColor">#14a8f7</item>
    </style>
